<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/category_button_scale"
    android:paddingBottom="@dimen/category_button_scale"
    android:paddingLeft="@dimen/category_button_scale"
    android:paddingRight="@dimen/category_button_scale">

    <ImageView
        android:layout_width="@dimen/category_button_scale"
        android:layout_height="@dimen/category_button_scale"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ogbox" />

    <ImageView
        android:layout_width="@dimen/category_button_scale"
        android:layout_height="@dimen/category_button_scale"
        android:layout_alignParentRight="true"
        android:src="@drawable/ogbox" />

</RelativeLayout>