<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btRedeemPowerUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:text="Redeem" />

        <TextView
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/tvSentBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/btRedeemPowerUp"
            android:text="PlaceHolder" />

        <TextView
            android:id="@+id/tvPowerUpMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tvSentBy"
            android:layout_below="@+id/tvSentBy"
            android:layout_toLeftOf="@id/btRedeemPowerUp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:text="More PlaceHolder" />

    </RelativeLayout>
</android.support.v7.widget.CardView>