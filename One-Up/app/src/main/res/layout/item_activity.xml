<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/aboveActivityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/aboveActivityEXP"
            android:text="Activity Name: "
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvActivityName"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/aboveActivityName"
            android:layout_toStartOf="@+id/aboveActivityEXP"
            android:textSize="24sp"
            android:layout_marginLeft="5dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/aboveActivityEXP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="Base EXP: "
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBaseExp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/aboveActivityEXP"
            android:layout_toEndOf="@+id/tvActivityName"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="24sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>