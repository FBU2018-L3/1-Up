<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/tvSelectAvatarPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:text="@string/avatar_selection_prompt" />

        <ImageView
            android:id="@+id/ivSelectedAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/tvSelectAvatarPrompt"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvAvatarPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivSelectedAvatar"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal" />

    </RelativeLayout>

</RelativeLayout>