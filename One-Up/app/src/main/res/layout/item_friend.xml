<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/category_button_scale">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/category_button_scale"
        android:layout_toLeftOf="@id/ivFriendProfilePic">

        <TextView
            android:id="@+id/tvFriendName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Friend Name"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvFriendParseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFriendName"
            android:layout_centerHorizontal="true"
            android:text="Parse Username"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:textAlignment="center" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivFriendProfilePic"
        android:layout_width="@dimen/friend_profile_pic"
        android:layout_height="@dimen/friend_profile_pic"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/image1" />

    <RelativeLayout
        android:id="@+id/rlLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/category_button_scale"
        android:layout_toRightOf="@id/ivFriendProfilePic">

        <TextView
            android:id="@+id/tvLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Level"
            android:textAppearance="@android:style/TextAppearance.Small" />

        <TextView
            android:id="@+id/tvFriendLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLevelText"
            android:layout_centerHorizontal="true"
            android:text="5"
            android:textAppearance="@android:style/TextAppearance.Large" />

    </RelativeLayout>
</RelativeLayout>