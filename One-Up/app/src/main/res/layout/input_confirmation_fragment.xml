<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlImgLvl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/ivUserAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/tvUserLvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="55"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tvCongrats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rlImgLvl"
        android:layout_toEndOf="@+id/rlImgLvl"
        android:text="Congrats!"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/pbExperiencePoints"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tvCongrats"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvUserName"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/rlImgLvl"
        android:indeterminate="false"
        android:max="100" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_alignEnd="@id/tvCongrats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCongrats"
        android:layout_toEndOf="@+id/rlImgLvl"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlImgLvl"
        android:layout_centerHorizontal="true"
        android:text="Ok" />
</RelativeLayout>