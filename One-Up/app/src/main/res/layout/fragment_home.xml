<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp"/>



        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/rlXP"
            android:layout_toRightOf="@id/ivProfile"
            android:layout_centerVertical="true"
            android:text="Welcome, User!" />

        <RelativeLayout
            android:id="@+id/rlXP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/rlLevel"
            android:layout_margin="10dp" >

            <TextView
                android:id="@+id/tvXPText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="XP"
                android:textAppearance="@android:style/TextAppearance.Small" />

            <TextView
                android:id="@+id/tvXPNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvXPText"
                android:layout_centerHorizontal="true"
                android:text="245"
                android:textAppearance="@android:style/TextAppearance.Large" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp" >

            <TextView
                android:id="@+id/tvLevelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Level"
                android:textAppearance="@android:style/TextAppearance.Small" />

            <TextView
                android:id="@+id/tvLevelNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvLevelText"
                android:layout_centerHorizontal="true"
                android:text="5"
                android:textAppearance="@android:style/TextAppearance.Large" />

        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/categoryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/marioAndroid"
        android:layout_below="@+id/rlHeader">

    </FrameLayout>

    <ImageView
        android:id="@+id/marioAndroid"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/rlButtons"
        android:src="@drawable/mario_android"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlButtons"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <include layout="@layout/sleep_toggle"
            android:layout_margin="10dp"
            android:id="@+id/sleepToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp">
            <Button
                android:id="@+id/btSeePowerUps"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/power_ups"
                />

            <TextView
                android:id="@+id/tvPowerUps"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btSeePowerUps"
                android:layout_centerHorizontal="true"
                android:text="See Power Ups"
                android:textAlignment="center" />
        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>