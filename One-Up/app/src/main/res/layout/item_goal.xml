<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvGoalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvisGoalComplete"
        android:hint="Goal activity name"
        android:text="I am a goal!" />

    <TextView
        android:id="@+id/tvCurrentGoalProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvGoalName"
        android:hint="Current Goal Progress"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvUltimateGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvGoalName"
        android:layout_toEndOf="@+id/tvCurrentGoalProgress"
        android:hint="ultimate goal"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvisGoalComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="Is complete?" />

</RelativeLayout>